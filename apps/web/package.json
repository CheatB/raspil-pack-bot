{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "NODE_OPTIONS='--max-old-space-size=768' next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:start": "jest start-command.test.ts",
    "test:all": "jest start-command.test.ts all-commands.test.ts",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate --schema=../../prisma/schema.prisma",
    "db:push": "prisma db push --schema=../../prisma/schema.prisma",
    "db:studio": "prisma studio --schema=../../prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=../../prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@repo/processor": "workspace:*",
    "@repo/types": "workspace:*",
    "axios": "^1.6.2",
    "bullmq": "^5.63.0",
    "dayjs": "^1.11.10",
    "ioredis": "^5.8.2",
    "ioredis-mock": "^8.13.1",
    "next": "^14.2.33",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.1",
    "telegraf": "^4.15.6",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "extensionsToTreatAsEsm": [],
    "globals": {
      "ts-jest": {
        "useESM": false
      }
    }
  }
}
