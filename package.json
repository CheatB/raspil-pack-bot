{
  "name": "emoji-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "build": "pnpm -C apps/web build",
    "start": "pnpm -C apps/web start",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma -n init",
    "set:webhook": "ts-node --project tsconfig.scripts.json apps/tg-bot/scripts/setWebhook.ts",
    "set:commands": "ts-node --project tsconfig.scripts.json apps/tg-bot/scripts/setCommands.ts",
    "sync:env": "./scripts/sync-env.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@prisma/client": "5.22.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
